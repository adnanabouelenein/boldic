<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/password_reset_success"
    tools:context=".registeration.PasswordResetSucessFragment">

    <TextView
        android:id="@+id/success_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_password_was"
        android:textSize="@dimen/text_size_32_sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:fontFamily="@font/noto_serif_bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_btn_password_reset_fragment_success"
        android:layout_width="@dimen/space_240_dp"
        android:layout_height="@dimen/space_56_dp"
        android:layout_marginTop="@dimen/space_56_dp"
        android:background="@drawable/btn_shape_white"
        android:text="@string/login"
        android:textSize="@dimen/text_size_18"
        app:layout_constraintTop_toBottomOf="@id/success_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/close_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/splash_screen_shapes"
        android:src="@drawable/ic_close"
        android:layout_marginBottom="@dimen/space_56_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>