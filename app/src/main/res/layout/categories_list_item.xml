<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/space_64_dp"
    android:layout_height="@dimen/space_72_dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/space_16_dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/space_64_dp"
        android:background="@color/main_color"
        android:layout_height="@dimen/space_72_dp">

        <ImageView
            android:id="@+id/category_icon"
            tools:src="@drawable/ic_category"
            android:background="@color/transparent_color"
            android:layout_width="@dimen/space_40_dp"
            android:layout_height="@dimen/space_40_dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/category_icon"
            app:layout_constraintEnd_toEndOf="@id/category_icon"
            app:layout_constraintTop_toBottomOf="@id/category_icon"
            android:layout_marginTop="@dimen/space_16_dp"
            tools:text="Category"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>